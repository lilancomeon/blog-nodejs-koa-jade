extends layout

block content
  div.loginBox
    h2 登录
    form.form-horizontal.mt50.J-loginForm
      .form-group
        label.col-sm-2.control-label(for='inputEmail3') Email
        .col-sm-10
          input#inputEmail3.form-control.required(type='email', placeholder='Email',name="email",required="Email")
      .form-group
        label.col-sm-2.control-label(for='inputPassword3') Password
        .col-sm-10
          input#inputPassword3.form-control.required(type='password', placeholder='Password',name="pwd",required="password")
      .form-group
        .col-sm-offset-2.col-sm-10
          .checkbox
            label
              input(type='checkbox',name='isRemember')
              |  Remember me
      .form-group
        .col-sm-offset-2.col-sm-10
          a.btn.btn-default.J-signInbtn Sign in
          span.J-errorMsg.errorMsg
            i.blogiconfont.icon-error
            span
            
          
